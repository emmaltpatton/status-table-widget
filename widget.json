
{
  "name": "Learning & Development Table",
  "description": "Enterprise L&D evaluation widget supporting CSV-driven content, per-row responses, and structured record capture.",
  "url": "https://emmaltpatton.github.io/ld-table-widget/index.html",
  "iconUrl": "https://emmaltpatton.github.io/ld-table-widget/icon-128.png",
  "platform": "iframe",
  "width": 900,
  "height": 420,
  "version": "3.0.0",

  "settings": [

    /* ===============================
       DATA SOURCE
       =============================== */
    {
      "type": "header",
      "label": "Data Source"
    },
    {
      "name": "csvFile",
      "label": "Upload CSV",
      "type": "file",
      "fileType": "csv"
    },
    {
      "name": "csvUrl",
      "label": "CSV URL",
      "type": "text",
      "placeholder": "https://example.com/data.csv"
    },
    {
      "name": "csvText",
      "label": "Inline CSV",
      "type": "textarea",
      "placeholder": "Question,Choices,Code\nExample,\"Yes|No\",A1"
    },
    {
      "name": "csvHasHeader",
      "label": "Has Header Row",
      "type": "checkbox",
      "defaultValue": true
    },

    /* ===============================
       COLUMN CONFIGURATION
       =============================== */
    {
      "type": "header",
      "label": "Column Configuration"
    },
    {
      "name": "csvQuestionColumn",
      "label": "Question Column",
      "type": "text",
      "defaultValue": "Question"
    },
    {
      "name": "csvChoicesColumn",
      "label": "Choices Column",
      "type": "text",
      "defaultValue": "Choices"
    },
    {
      "name": "csvChoicesDelimiter",
      "label": "Delimiter",
      "type": "dropdown",
      "options": ["|", ",", ";", "/", ":"],
      "defaultValue": "|"
    },
    {
      "name": "csvCodeColumn",
      "label": "Code Column",
      "type": "text",
      "defaultValue": "Code"
    },
    {
      "name": "csvCacheBuster",
      "label": "Bypass Cache",
      "type": "checkbox",
      "defaultValue": true
    },

    /* ===============================
       TABLE SETTINGS
       =============================== */
    {
      "type": "header",
      "label": "Table Settings"
    },
    {
      "name": "tableTitle",
      "label": "Title",
      "type": "text",
      "defaultValue": "Learning & Development Evaluation"
    },
    {
      "name": "colQuestionHeader",
      "label": "Question Header",
      "type": "text",
      "defaultValue": "Question"
    },
    {
      "name": "colChoiceHeader",
      "label": "Response Header",
      "type": "text",
      "defaultValue": "Response"
    },
    {
      "name": "colDateHeader",
      "label": "Date Header",
      "type": "text",
      "defaultValue": "Date"
    },

    /* ===============================
       BEHAVIOUR
       =============================== */
    {
      "type": "header",
      "label": "Behaviour"
    },
    {
      "name": "choices",
      "label": "Default Choices",
      "type": "text",
      "defaultValue": "Yes, No, N/A"
    },
    {
      "name": "enforceRequired",
      "label": "Require All Responses",
      "type": "checkbox"
    },
    {
      "name": "restrictMaxToday",
      "label": "Prevent Future Dates",
      "type": "checkbox",
      "defaultValue": true
    },
    {
      "name": "updateDateOnChange",
      "label": "Auto-set Date On Change",
      "type": "checkbox"
    },
    {
      "name": "showReloadButton",
      "label": "Show Reload Button",
      "type": "checkbox",
      "defaultValue": true
    },

    /* ===============================
       FALLBACK QUESTIONS
       =============================== */
    {
      "type": "header",
      "label": "Fallback Questions"
    },
    {
      "name": "questions",
      "label": "Questions",
      "type": "textarea",
      "defaultValue": "Access Employee Portal within PageUp\nComplete Workplace Behaviour training\nReview HSE Essentials procedures"
    }
  ]
}
