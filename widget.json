
{
  "name": "Status Table (Rich HTML + Single Choice + Date)",
  "description": "Three-column status tracker with rich HTML in the first column, a consistent single-choice field per row, and an auto-updating/back-datable date column.",
  "icon": "https://emmaltpatton.github.io/status-table-widget/icon-status-table.png",
  "type": "iframe",
  "url": "https://emmaltpatton.github.io/status-table-widget/index.html",
  "width": 900,
  "height": 520,
  "defaults": {
    "FirstColumnLabel": "Item / Requirement",
    "SecondColumnLabel": "Status",
    "ThirdColumnLabel": "Date",
    "ChoiceOptions": "Not started\nIn progress\nCompleted",
    "DateFormat": "YYYY-MM-DD",
    "AllowBackdate": true,
    "ThemeColor": "#0f3b5f",
    "RowHTML_Defaults": "<b>Policy induction</b><br><i>Read and acknowledge</i>\nDevice setup & VPN\nCreate LMS account & enrol in core modules",
    "CSVSource": "",
    "RemoteOptionsURL": "",
    "APIAuthToken": "",
    "ExternalCSS": "",
    "KV_StatusColor": "Not started:#6c757d;In progress:#0d6efd;Completed:#198754"
  },
  "properties": [
    { "name": "FirstColumnLabel",  "label": "First column label",   "type": "Text" },
    { "name": "SecondColumnLabel", "label": "Second column label",  "type": "Text" },
    { "name": "ThirdColumnLabel",  "label": "Third column label",   "type": "Text" },

    { "name": "ChoiceOptions",     "label": "Single-choice options (one per line)", "type": "Textarea" },
    { "name": "DateFormat",        "label": "Date format", "type": "Dropdown",
      "options": ["YYYY-MM-DD", "DD/MM/YYYY", "MM/DD/YYYY"] },
    { "name": "AllowBackdate",     "label": "Allow backdating of dates", "type": "Toggle" },

    { "name": "RowHTML_Defaults",  "label": "Seed rows (Column 1 HTML, one row per line)", "type": "Textarea" },
    { "name": "CSVSource",         "label": "Upload CSV (overrides Seed rows)", "type": "File Upload" },

    { "name": "RemoteOptionsURL",  "label": "Remote options URL (JSON array of strings)", "type": "External" },
    { "name": "APIAuthToken",      "label": "API Auth Token (Bearer ...)", "type": "Secure Text" },
    { "name": "KV_StatusColor",    "label": "Key/Value: status->color (e.g. A:#hex;B:#hex)", "type": "Key Value Pair" },
    { "name": "ThemeColor",        "label": "Brand color", "type": "Color" },
    { "name": "ExternalCSS",       "label": "Custom CSS URL", "type": "External" }
  ]
}
